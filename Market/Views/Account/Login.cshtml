@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<style>
    /* Custom Styles */
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 400px;
        margin: 0 auto;
        margin-top: 50px;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .checkbox label {
        font-weight: normal;
    }

    .btn-primary {
        width: 100%;
    }
</style>

<h1>@ViewData["Title"]</h1>

<form asp-controller="Account" asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Display validation summary -->
    <div class="form-group">
        <label asp-for="Email"></label> <!-- Label for email field -->
        <input asp-for="Email" class="form-control" /> <!-- Email input field -->
        <span asp-validation-for="Email" class="text-danger"></span> <!-- Validation message for email -->
    </div>
    <div class="form-group">
        <label asp-for="Password"></label> <!-- Label for password field -->
        <input asp-for="Password" class="form-control" /> <!-- Password input field -->
        <span asp-validation-for="Password" class="text-danger"></span> <!-- Validation message for password -->
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" /> <!-- Checkbox for remember me -->
                @Html.DisplayNameFor(m => m.RememberMe) <!-- Display name for remember me -->
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Log in</button> <!-- Submit button -->
</form>
